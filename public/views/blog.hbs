<link rel="stylesheet" type="text/css" href="./styles/blog.css">
<nav>
    <header>
        <div class="top-header">


            <div class="top-header-panel">
                <div class="top-header-social-icons">
                    <a href="#"><img alt="Twitter" src="pics/twitter.png"></a>
                    <a href="#"><img alt="Rss" src="pics/rss.png"></a>
                    <a href="#"><img alt="Facebook" class="last-img" src="pics/facebook.png"></a>
                </div>

                <div class="top-header-search">
                    <form class="top-header-search-form" method="get">
                        <input class="top-header-search-input" name="s" type="text" value="Search this website...">
                        <input class="top-header-search-btn" src="pics/search_btn.png" type="image">
                    </form>
                </div>
            </div>

            <a class="top-header-logo" href="/">
                <img src="./pics/logo.png" class="top-header-logo-img">
                <div class="top-header-logo-text-container">
                    <span class="top-header-logo-text">Chameleon</span>
                    <span class="top-header-slogan-text">travel the World Now</span>
                </div>
            </a>

            <ul class="top-header-nav" id="mobile-menu">
                <li><a href="#" class="first-el">Home</a></li>
                <li><a href="#">About</a></li>
                <li><a href="#">Contact</a></li>
                <li><a href="#">Page Templates</a></li>
                <li><a href="#">Shortcodes</a></li>
                <li><a href="#">Blog</a></li>
            </ul>
             <a href="javascript:void(0);" style="font-size:15px;" class="top-header-display-icon" onclick="myFunction()">&#9776;</a>
            <div class="top-header-currentPage">
               <a  href="#/">Home</a> >> <strong>{{blogArticles.result.[0].category}}</strong>
            </div>
        </div>

    </header>
</nav>
<!-- End of Nav -->
<main>
    <!-- Start of Jumbotron  -->
    <div class="jumbotron main-jumbotron-section">
        <hr class="section-separator">

        <h2>"Travel is the only thing you buy that makes you richer"</h2>
        <p class="lead">He who does not travel does not know the value of men.</p>

        <hr class="section-separator section-separator-last">
    </div>
    <!-- End of Jumbotron  -->


    <!-- Page Content -->
    <div class="container">

        <div class="row">

            <!-- Blog Entries Column -->
            <div class="col-md-8 col-md-offset-1">

                <h2 class="my-4">Page Heading
                    <small>Secondary Text</small>
                </h2>

                <!-- Blog Post -->
                {{#blogArticles.result}}
                <div class="card-entry-container ">
                    <img class="card-img-top img-thumbnail img-responsive" src="./pics/post-pic.png" alt="Card image cap">
                    <div class="card-entry-text">
                        <h4 class="card-title">{{title}}</h4>
                        <p class="card-text">{{text}}</p>
                        <div class="card-footer text-muted">
                            Posted on {{date}} by
                            <a href="#">{{author}}</a>
                        </div>
                        <a href="#/post" class="btn btn-default  card-footer-btn">Read More</a>
                    </div>
                </div>
                {{/blogArticles.result}}
                 {{!-- Pagination --}}
                <ul class="pagination justify-content-center mb-4">
                    <li class="page-item">
                        <a class="page-link" href="#">&larr; Older</a>
                    </li>
                    <li class="page-item disabled">
                        <a class="page-link" href="#">Newer &rarr;</a>
                    </li>
                </ul>

            </div>
        </div>
    </div>
</main>